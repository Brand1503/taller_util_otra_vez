int fin (){
    int fin = 1;
    printf("DESEAS SALIR (0) O REGRESAR AL MENU PRINCIPAL (1)\n");
    scanf("%d", &fin);

    if (fin ==0){
        printf ("SALIENDO DEL PROGRAMA ...");
        exit (1);
    }
    return 0;
}
